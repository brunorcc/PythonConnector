@addTagHelper *, Westwind.AspNetCore.Markdown
@using Primavera.Hydrogen
@{
    // Layout

    this.Layout = null;

    // Title

    string title = "PRIMAVERA Lithium Python Connector Service - Client Library";

}

<!DOCTYPE html>
<html>
<head>
    <title>@title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="msapplication-TileImage" content="~/img/favicon.png" />
    <link rel="icon" href="/img/favicon.png" sizes="64x64" />
    <link rel="apple-touch-icon-precomposed" href="/img/favicon.png" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Montserrat', 'Arial', sans-serif;
            font-size: 14px;
            font-weight: 400;
            color: #1e1e1e;
            margin: 30px;
            background-color: white;
			line-height: 1.5;
        }
		a {
			color: #135CAB;
			text-decoration: none;
		}
        h1 {
            color: #135CAB;
            font-size: 36px;
            margin-bottom: 20px;
            font-weight: 600;
			padding-bottom: .3em;
			border-bottom: 1px solid #eaecef;
        }
        h2 {
            color: #135CAB;
            font-size: 30px;
            margin-top: 20px;
            margin-bottom: 20px;
            font-weight: 600;
			padding-bottom: .3em;
			border-bottom: 1px solid #eaecef;
        }
        h3 {
            color: #135CAB;
            font-size: 26px;
            margin-top: 20px;
            margin-bottom: 20px;
            font-weight: 600;
        }
        h4 {
            color: #135CAB;
            font-size: 20px;
            margin-top: 20px;
            margin-bottom: 20px;
            font-weight: 600;
        }
        h5 {
            color: #135CAB;
            font-size: 16px;
            margin-top: 20px;
            margin-bottom: 20px;
            font-weight: 600;
        }
        h6 {
            color: #135CAB;
            font-size: 14px;
            margin-top: 20px;
            margin-bottom: 20px;
            font-weight: 600;
        }
		pre {
			padding: 16px;
			overflow: auto;
			border-radius: 3px;
			word-wrap: normal;
			word-break: normal;
			background-color: rgba(246,246,246,1);
		}
		code {
			background-color: rgba(246,246,246,1);
			border-radius: 3px;
			padding: .2em .4em;
		}
		pre > code {
			padding: 0;
		}
		table {
			border-collapse: collapse;
		} 
		table th {
			padding: 4px 8px;
			border: 1px solid #dfe2e5;
			text-align: left;
			font-weight: 600;
		}
		table td {
			padding: 4px 8px;
			border: 1px solid #dfe2e5;
		}
		blockquote {
			padding: 0 1em;
			color: #6a737d;
			border-left: .25em solid #dfe2e5;
			margin: 0;
		}
    </style>
</head>

<body>
    <markdown filename="../GeneratedCode/ClientLibDoc.gen.md" normalize-whitespace="false" sanitize-html="false" />
</body>

</html>
